{
    "plugins": ["plugins/markdown"],
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    },
    "source": {
        "include": ["."],
        "includePattern": ".+\\.js(doc|x)?$",
        "exclude": ["node_modules", "docs-output", ".git", ".github"],
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
	"readme": "./docs/homepage.md",
        "destination": "./docs-output",
        "recurse": true,
        "tutorials": "./docs" 
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}